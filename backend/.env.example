# Development Environment Variables
# Copy this file to .env and update with your development values

# Application Settings
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME="HTML Page Generator"
VERSION="1.0.0"

# Security
SECRET_KEY=your-super-secret-development-key-here-64-chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=720

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/htmlpagegen_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS Settings
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# AI Configuration - Primary Provider
AI_PROVIDER=HUGGINGFACE
HUGGINGFACE_API_KEY=ВАШ_КЛЮЧ

# HUGGINGFACE Configuration
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Alternative AI Providers (optional)
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# OpenAI (optional backup)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting (more relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=html,css,js,txt,json

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_FILE=./logs/app.log

# Monitoring (disabled for development)
SENTRY_DSN=
METRICS_ENABLED=false

# Performance
CACHE_TTL=300
MAX_WORKERS=2

# API Documentation (enabled for development)
DOCS_ENABLED=true
OPENAPI_DOCS_ENABLED=true

# Plugins
PLUGINS_DIR=./plugins
ENABLED_PLUGINS=seo,analytics,social

# SEO Defaults
DEFAULT_META_TITLE="HTML Page Generator - Development"
DEFAULT_META_DESCRIPTION="AI-powered HTML page generation service - Development Environment"

# Development specific settings
PORT=8000
HOST=127.0.0.1
RELOAD=true
