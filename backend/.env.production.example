# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Application Settings
ENVIRONMENT=production
DEBUG=false
PROJECT_NAME="HTML Page Generator"
VERSION="1.0.0"

# Security
SECRET_KEY=your-super-secret-production-key-here-64-chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/htmlpagegen_prod

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS Settings
ALLOWED_HOSTS=https://yourdomain.com,https://api.yourdomain.com

# AI Configuration
AI_PROVIDER=deepseek
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# OpenAI (optional backup)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
ALLOWED_FILE_TYPES=html,css,js,txt,json

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/htmlpagegen/app.log

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
METRICS_ENABLED=true

# Performance
CACHE_TTL=3600
MAX_WORKERS=4

# API Documentation (disable in production for security)
DOCS_ENABLED=false
OPENAPI_DOCS_ENABLED=false

# Plugins
PLUGINS_DIR=/app/plugins
ENABLED_PLUGINS=seo,analytics,social

# SEO Defaults
DEFAULT_META_TITLE="Professional HTML Page Generator"
DEFAULT_META_DESCRIPTION="AI-powered HTML page generation service"
