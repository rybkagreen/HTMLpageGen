{
  "name": "HTMLpageGen Development Environment (Codespaces Optimized)",
  "image": "node:lts",
  
  "features": {
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {},
    "ghcr.io/wxw-matt/devcontainer-features/script_runner:0": {},
    "ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    }
  },

  // –û–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–π —Ñ–æ—Ä–≤–∞—Ä–¥–∏–Ω–≥ –ø–æ—Ä—Ç–æ–≤ –¥–ª—è Codespaces
  "forwardPorts": [
    3000,
    8000,
    5432,
    6379,
    8080,
    8081,
    9001,
    6006,
    9229,
    5678,
    3001,
    3002,
    3003,
    3004,
    3005
  ],

  "portsAttributes": {
    "3000": {
      "label": "Frontend (Next.js)",
      "onAutoForward": "openPreview",
      "requireLocalPort": false,
      "protocol": "http"
    },
    "8000": {
      "label": "Backend API (FastAPI)",
      "onAutoForward": "notify",
      "requireLocalPort": false,
      "protocol": "http"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis Cache",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "PgAdmin",
      "onAutoForward": "ignore",
      "protocol": "http"
    },
    "6006": {
      "label": "Storybook",
      "onAutoForward": "openBrowser",
      "protocol": "http"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.mypy-type-checker",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag"
      ]
    }
  },

  "postCreateCommand": ".devcontainer/bootstrap.sh",
  "postStartCommand": "echo 'DevContainer is ready! üöÄ'",

  "mounts": [
    "source=node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=pnpm-store,target=/home/vscode/.local/share/pnpm,type=volume"
  ],

  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "shutdownAction": "stopContainer",

  "overrideCommand": false,
  "privileged": true,
  
  "initializeCommand": "echo 'Initializing DevContainer...'",
  
  "containerUser": "vscode",
  "updateContentCommand": "echo 'Content updated!'",
  
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}
